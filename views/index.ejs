
<%- include("partials/header") %>


<div class="container">
<header class="jumbotron">
	<div class="container">
<h1>
	Welcome to Yelp Movies</h1>
	<p>
		Project made by Prakhar Srivastava based on Colt Steele's YelpCamp
	</p>
	<p>
		<a class="btn btn-primary btn-lg" href="/movies/new">Add a new Movie</a>
	</p>
	</div>
	</header>
<div class="row">
	<div class="col-lg-12">
		<h3>
			Some of my favourite movies of recent times!
		</h3>
	</div>
	</div>
	<div class="row text-center" style="display:flex; flex-wrap: wrap;" >
<% movies.forEach(function(movies){%>
<div class="col-md-3 col-sm-6">
	<div class="thumbnail">
		<img src="<%= movies.image%> ">
		<div class="caption">
		<h4>
			<%= movies.name %>
			</h4>	
		</div>
		<p>
			<a href="/movies/<%= movies._id %>" class="btn btn-primary">More Info</a>
		</p>
	</div>
	<h4>
		
	</h4>
	
</div>

<% }); %> 
</div>
</div>
<%- include("partials/footer") %>